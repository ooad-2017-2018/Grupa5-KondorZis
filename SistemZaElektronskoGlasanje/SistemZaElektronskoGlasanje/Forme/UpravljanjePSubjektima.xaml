        <TextBox Name="Sjediste" HorizontalAlignment="Left" Margin="52,303,0,0" Text="" VerticalAlignment="Top" RenderTransformOrigin="0.571,0.25" Width="212"/>
        <TextBlock HorizontalAlignment="Left" Margin="582,48,0,0" Text="Brisanje subjekta" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="582,95,0,0" Text="Naziv subjekta:" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Margin="704,95,0,0" Text="" VerticalAlignment="Top" RenderTransformOrigin="0.571,0.25" Width="282"/>
        <Button Content="Obriši" HorizontalAlignment="Left" Margin="927,156,0,0" VerticalAlignment="Top"/>
        <TextBlock Name="Greska" Foreground="Red" HorizontalAlignment="Left" Margin="52,407,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="580"/>
    </Grid>
